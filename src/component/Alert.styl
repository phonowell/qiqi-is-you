@import '../include/basic'

#alert
  width 6.5rem
  margin-top 1rem !important
  border-radius 0.2rem
  background-color #fff
  overflow hidden

  .container
    $box()
    display flex
    padding 0.2rem
    min-height 1rem

  .message
    margin auto
    font-size 0.24rem
    color #777
    line-height 1.8
    word-break break-all

  .toolkit
    width 100%
    height 0.8rem
    position relative
    border-top 1px solid #eee

    .btn-toolkit
      height @height
      line-height @height

  .btn-toolkit
    display inline-block
    width 100%
    left 0
    top 0
    text-align center
    background none
    color #bbb
    font-size 0.2rem
    cursor pointer

    &:active
      background-color rgba(#000, 0.02)