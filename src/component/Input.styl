@import '../include/basic'

#input
  fixed left 50% bottom
  transform translateX(-50%)
  width 7.5rem
  height 0
  z-index 5
  opacity 0.1

#group-right-input
  size 3rem
  absolute right 0.5rem bottom 0.5rem
  transform rotate(-45deg)

  div
    position absolute
    size @width * 0.5
    text-align center
    line-height @height
    font-size @height * 0.5
    color #fff
    background-color rgba(#000, 0.2)
    border-radius 50%
    transition background-color 150ms
    transform scale(0.9)

    &:before
      absolute left top
      size 100%
      transform rotate(45deg)

    &:nth-of-type(1)
      left 0
      top 0

      &:before
        content '⇦'

    &:nth-of-type(2)
      right 0
      top 0

      &:before
        content '⇧'

    &:nth-of-type(3)
      right 0
      bottom 0

      &:before
        content '⇨'

    &:nth-of-type(4)
      left 0
      bottom 0

      &:before
        content '⇩'

    &:active
      background-color rgba(#000, 0.25)