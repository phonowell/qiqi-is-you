@import '../include/basic'

#waiter
  fixed left 50% top 50%
  transform translate(-50%, -50%)
  will-change opacity, transform
  width (8px + 2px) * 3
  height auto
  font-size 0
  padding 16px
  z-index 129
  animation fadeIn 300ms both

  &:before
    absolute left top
    content ''
    display block
    width 100%
    height 100%
    background-color rgba(#000, 0.9)
    border-radius 8px
    animation zoomIn 300ms both

  &.leaving
    animation fadeOut 300ms both

    &:before
      animation zoomOut 300ms both

  div
    $box()
    display inline-block
    size 8px
    background-color #fff
    margin 1px
    border-radius 50%
    animation-fill-mode forwards
    opacity 0

    &:nth-of-type(5)
      opacity 0

  for index, i in 1 2 3 6 9 8 7 4
    div:nth-of-type({index} )
      animation waiting 1s ease 0.125s * (i - 1) infinite

@keyframes waiting
  0%, 75%, 100%
    opacity 0
    transform scale(0.5)

  25%
    opacity 1
    transform scale(1)